---
const menus = [
  {
    href: "#work",
    label: "Work",
  },
  {
    href: "#talks-awards",
    label: "Talks & Awards",
  },
  // {
  //   href: "#about",
  //   label: "About",
  // },
];
---

<div
  class="mx-auto px-8 max-w-3xl 2xl:max-w-7xl 2xl:px-16 border-x border-zinc-200 sticky top-4 z-10 pb-8"
>
  <div>
    <nav role="navigation" aria-label="Main navigation">
      <ul
        class="flex items-center gap-3 text-xs font-medium"
        role="list"
        id="nav"
      >
        {
          menus.map((menu) => (
            <li>
              <a
                href={menu.href}
                class="py-2 px-3 rounded-full duration-300 hover:bg-zinc-100 hover:text-black dark:hover:bg-zinc-900 dark:hover:text-white nav-link bg-zinc-200 dark:bg-zinc-800 text-black dark:text-white"
                data-target="talks"
              >
                {menu.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</div>
